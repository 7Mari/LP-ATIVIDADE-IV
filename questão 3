#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <string.h>

struct Produto
{
    char nome[200];
    float preco;
    int estoque;
};


int main(){
    setlocale(LC_ALL ,"portuguese");

    struct Produto produtos;
    int codigo;
    int contador;
    float valorTotal;
    
    do
    {
        printf("\n[1]Realizar uma compra\n");
        printf("[2]Consultar estoque\n");
        printf("[3]Sair do programa\n");
        printf("---------------------------------\n");
        printf("Escolhas uma das opções acima: \n");
        scanf("%d" ,&codigo);
  
    switch (codigo)
    {
    case 1:
        printf("Digite o produto de sua preferência: \n");
        gets(produtos.nome);
            switch (produtos.nome)
            {
            case 'A':
                /* code */
                break;
            
            default:
                break;
            }
    
    
        contador++;
        break;
    
    case 2:
        produtos.estoque = 20;
        printf("\n[A]Tomate: %d | Valor: R$3\n" ,produtos.estoque);
        printf("\n[B]Cebola: %d | Valor: R$3\n" ,produtos.estoque);
        printf("\n[C]Batata: %d | Valor: R$3\n" ,produtos.estoque);

        if (codigo == 1)
    {
        produtos.estoque = -1;
    }

        break;
    case 3:

    produtos.preco = 3;
    valorTotal = contador * produtos.preco;
    
        printf("Valor Total da compra: %.1f\n" ,valorTotal);
        break;
    default:
        printf("Opção inválida!");
        break;
    }
    } while (codigo != 3);
    
    

    return 0;
}
